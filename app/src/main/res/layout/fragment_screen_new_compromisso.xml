<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen_compromissos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_titulo"
        android:hint="Titulo"
        android:layout_marginBottom="10dp"
      />


        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker"
            android:layout_gravity="center"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"></DatePicker>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_horario"
        android:minWidth="170dp"
        android:layout_marginRight="20dp"
        android:hint="Horario"/>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/view_below" >

        <RadioButton
            android:id="@+id/AM"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="AM"
            android:layout_marginRight="30dp"/>

        <RadioButton
            android:id="@+id/PM"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="PM" />
    </RadioGroup>
    </GridLayout>

    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:id="@+id/list_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_gravity="center"
        >
        <Spinner
        android:id="@+id/spinnerType"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:entries="@array/tipo"
        android:layout_gravity="center"
        >
    </Spinner>
        <CheckBox
        android:id="@+id/checkboxImportante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Importante" />
      </GridLayout>





    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginTop="15dp"/>




</LinearLayout>